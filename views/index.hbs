
{{#if user}}
<div class="container">
  <div class="row">
    {{#each product}}
      {{#with this}}
        <div class="col my-3">
          <div class="card" style="width: 18rem;">
            <img src={{img}} class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title">
                {{title}}
              </h5>
              <p class="card-text">
                {{description}}
              </p>
              <a href="#" class="btn btn-primary">
                Buy
              </a>
            </div>
          </div>
        </div>
      {{/with}}
    {{/each}}
  </div>
</div>
{{else}}
<div class="container">
  <div class="row">
    <div class="col">
      <h1>
        Please login
      </h1>
    </div>
  </div>
  
{{/if}}